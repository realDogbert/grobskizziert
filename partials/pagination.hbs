<nav class="pagination" role="pagination">
    {{#if prev}}
        <a class="newer-posts" href="{{pageUrl prev}}">&larr; Neue Einträge</a>
    {{/if}}
    <span class="page-number">Seite {{page}} von {{pages}}</span>
    {{#if next}}
        <a class="older-posts" href="{{pageUrl next}}">Ältere Einträge&rarr;</a>
    {{/if}}
</nav>